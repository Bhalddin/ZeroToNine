    <ItemGroup>
      <TestAssemblies Include="**\bin\Release\*Tests.dll" />
    </ItemGroup>
  </Target>
  <ItemGroup>
    <ProjectToBuild Include="Src/*.sln" />
  </ItemGroup>
</Project>
